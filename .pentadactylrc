" mappings
map , <Leader>
nmap -builtin <Leader>, :noh<CR>
nmap -builtin <Leader>d :downloads<CR>
nmap -builtin <Leader>m :messages<CR>
nmap -builtin <Leader>p :set private!<CR>
nmap -builtin ; :
nmap -builtin : ;
vmap -builtin ; :
vmap -builtin : ;
nmap -builtin <C-S-n> :tabmove! +1<CR>
nmap -builtin <C-S-p> :tabmove! -1<CR>
nmap -builtin h 3h
nmap -builtin j 3j
nmap -builtin k 3k
nmap -builtin l 3l
nmap -builtin <C-a> <Nop>
