" mappings
map , <Leader>
nmap -b <Leader>, :noh<CR>
nmap -b <Leader>a :addons<CR>
nmap -b <Leader>d :downloads<CR>
nmap -b <Leader>m :messages<CR>
nmap -b <Leader>p :private winopen<CR>
nmap -b <C-S-n> :tabmove! +1<CR>
nmap -b <C-S-p> :tabmove! -1<CR>
nmap -b h 7h
nmap -b j 7j
nmap -b k 7k
nmap -b l 7l
nmap <C-a> <Nop>
nmap <C-h> <Nop>
nmap <C-j> <Nop>
nmap <C-k> <Nop>
nmap <C-l> <Nop>

" quvi
js <<EOF
hints.addMode("l", "Launch video from hint", function (elem, loc)
              commands.execute('!quvi dump -b mute "'
              + loc.replace(/([$`"\\])/g, "\\$1") + '" &'));
EOF
nmap -builtin x ;l
nmap <A-x> -s -js <<EOF
commands.execute('!quvi dump -b mute "' +
                 content.location.href.replace(/([$`"\\])/g, "\\$1") + '" &');
EOF

