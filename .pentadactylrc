" mappings
map , <Leader>
nmap -b <Leader>, :noh<CR>
nmap -b <Leader>d :tabopen about:downloads<CR>
nmap -b <Leader>m :messages<CR>
nmap -b <Leader>p :private winopen<CR>
nmap -b ; :
nmap -b : ;
vmap -b ; :
vmap -b : ;
nmap -b <C-S-n> :tabmove! +1<CR>
nmap -b <C-S-p> :tabmove! -1<CR>
nmap -b h 5h
nmap -b j 5j
nmap -b k 5k
nmap -b l 5l
nmap <C-a> <Nop>
nmap <C-h> <Nop>
nmap <C-j> <Nop>
nmap <C-k> <Nop>
nmap <C-l> <Nop>

" quvi
js <<EOF
hints.addMode("l", "Launch video from hint", function (elem, loc)
              commands.execute('!quvi "' + loc.replace(/([$`"\\])/g, "\\$1")
              + '" &>/dev/null &'));
EOF
nmap -builtin x ;l
nmap <A-x> -s -js commands.execute('!quvi "' + content.location.href.replace(/([$`"\\])/g, "\\$1") + '" &> /dev/null &');
"map <A-x> -s -js CommandExMode().open("!quvi '" + content.location.href + "' &> /dev/null &");

