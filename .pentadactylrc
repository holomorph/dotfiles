" mappings
nmap -b <Leader>a :addons<CR>
nmap -b <Leader>d :downloads<CR>
nmap -b <Leader>m :messages<CR>
nmap -b <Leader>p :private winopen<CR>
nmap -b <C-S-n> :tabmove! +1<CR>
nmap -b <C-S-p> :tabmove! -1<CR>
nmap -b h 7h
nmap -b j 7j
nmap -b k 7k
nmap -b l 7l
nmap <C-a> <Nop>
nmap <C-h> <Nop>
nmap <C-j> :jumps<CR>
nmap <C-k> <Nop>
nmap <C-l> <Nop>
nmap <A-a> <Nop>
cmap <A-b> <C-left>
cmap <A-f> <C-right>
cmap <A-BS> <C-w>

" launch videos
nmap -builtin x ;l
nmap <A-x> :launchv<CR>

