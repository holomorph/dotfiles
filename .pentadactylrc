" ~/.pentadactylrc

set guioptions-=br
set guioptions+=n
set runtimepath=~/.config/pentadactyl
set showtabline=never

colorscheme zenburn

" completions
hi CompIcon width: 12px; display: inline-block; margin-right: .5ex;
hi CompIcon>img width: 10px; height: 10px; vertical-align: middle;

" hints
hi Hint font-family: monospace; font-size: 8pt; font-weight: bold;
hi Hint -a color: #302505; background: #ffc524 !important;
hi Hint -a padding: 0px 1px 0px 1px;
hi HintActive background-color: #88ff00; color: black !important;
hi HintElem background-color: inherit;

" mappings
runtime mappings.vim
nmap -b <Leader>a :addons<CR>
nmap -b <Leader>d :downloads<CR>
nmap -b <Leader>m :messages<CR>
nmap -b <Leader>p :private winopen<CR>
nmap -b <C-S-n> :tabmove! +1<CR>
nmap -b <C-S-p> :tabmove! -1<CR>
nmap -b h 7h
nmap -b j 7j
nmap -b k 7k
nmap -b l 7l

" launch videos
nmap -builtin x ;l
nmap <A-x> :launchv<CR>
