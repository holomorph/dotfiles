" ~/.vimperatorrc

set complete-=f
set focuscontent=true
set incsearch
set noscrollbars
set showstatuslinks=0
set smartcase

set! plugins.click_to_play=true
set! plugins.hide_infobar_for_missing_plugin=true

" command line
hi ContentSeparator display: none;
hi Normal color:#969896; background:#282a2e;
hi CmdLine color: inherit; background: inherit;
hi StatusLine color: #969896; background: #282a2e; font-weight: normal !important;
hi Filter color: #ffffff; font-weight: bold;
hi Prompt back
hi PromptText color: #ffcfaf; font-weight: bold;

" completions
hi CompDesc color: #cc9393; min-width: 450px; max-width: 450px;
hi CompIcon display: none;
hi CompItem[selected] color:#f0c674; background:#434443;
hi CompTitle font-weight: bold; color: #ffcfaf; background: #1b1b1b;
hi CompTitle>* padding: 1px .5ex;
hi CompResult min-width: 450px; max-width: 450px; overflow: hidden;

" messages
hi InfoMsg color:#f8f893;
hi ErrorMsg font-weight: bold; color: #80d4aa;
hi ModeMsg color: #ffcfaf; border-radius: 1px; padding: 0px 8px;
hi MoreMsg color: #b5bd68;
hi WarningMsg color: #dfe4cf; font-weight: bold;

" hints
hi Hint font-family: monospace; font-size: 8pt; font-weight: bold;
hi Hint -a color: #302505; background: #ffc524 !important;
hi Hint -a padding: 0px 1px 0px 1px;
hi HintActive background-color: #88ff00; color: black !important;
hi HintElem background-color: inherit;


hi Indicator color: #efef8f;
hi NonText font-weight: bold; color: #5b605e;
hi Tag color: #efef8f;
hi Title color: #e37170; background: #664040; font-weight: bold; padding: 0 4px;
hi URL color: #7f9f7f;

" mappings
let mapleader = ","
nnoremap <Leader>, :nohlsearch<CR>
nnoremap <Leader>d :downloads<CR>
nnoremap <Leader>m :messages<CR>
nnoremap <Leader>p :winopen -private<CR>
map s :open google 
map S :tabopen google 
nmap <C-S-n> :tabmove! +1<CR>
nmap <C-S-p> :tabmove! -1<CR>
nmap <F3> <Nop>
nmap <C-a> <Nop>
nmap <C-h> <Nop>
nmap <C-j> <Nop>
nmap <C-k> <Nop>
nmap <C-l> <Nop>
noremap h 5h
noremap j 5j
noremap k 5k
noremap l 5l

" quvi
js <<EOF
hints.addMode("l", "Launch video from hint", function (elem, loc)
              io.system('quvi "' + loc.replace(/([$`"\\])/g, "\\$1")
              + '" &>/dev/null &'));
EOF
nmap <silent> x :l

" vim:ft=vimperator
