"
" ~/.vimperatorrc
"

" Options
"
set hlsearch
set noscrollbars
set tabnumbers
set complete-=f
set animations

" Custom colours
"
hi Normal -a color:#969896 !important; background:#1b1b1b !important;
hi CompItem[selected] -a color:#1b1b1b !important;
hi Filter -a color:#1b1b1b !important;
hi InfoMsg -a color:#f0c674 !important; background:transparent !important;
hi MoreMsg -a color:#b5bd68 !important; background:transparent !important;
hi WarningMsg -a color:#cc6666 !important; background:transparent !important;


" Custom Font
"
hi CmdLine>* -a font-family: Cousine !important; font-size: 8pt !important;
hi Normal -a font-family: Cousine !important; font-size: 8pt !important;
hi StatusLine -a font-family: Cousine !important; font-size: 8pt !important;

hi CompMsg -a font-family: Cousine !important; font-size: 8pt !important;
hi ErrorMsg -a font-family: Cousine !important; font-size: 8pt !important;
hi InfoMsg -a font-family: Cousine !important; font-size: 8pt !important;
hi ModeMsg -a font-family: Cousine !important; font-size: 8pt !important;
hi MoreMsg -a font-family: Cousine !important; font-size: 8pt !important;
hi WarningMsg -a font-family: Cousine !important; font-size: 8pt !important;
hi ContentSeparator display: none !important;

" Mappings
"
let mapleader = ","
cnoremap <C-n> <Down>
cnoremap <C-p> <Up>
nnoremap <Leader>, :nohlsearch<CR>
nnoremap <Leader>p :set private!<CR>
nnoremap : ;
nnoremap ; :
vnoremap : ;
vnoremap ; :
map s ;open google 
map S ;tabopen google 


"
" Toggle Styles {{{
" ----------------------------------------------------------------------------

noremap <F3> :styletoggle<Space>-name<Space>tomorrownight<CR>

"}}}
" Style: Hybrid Colourscheme {{{
" ----------------------------------------------------------------------------
style -name tomorrownight http://*,https://*,file://*,about:blank <<EOM
* {
    color: #969896 !important;
    background: #1d1f21 !important;
    border-color: #282a2e !important;
  }
  a, a * {
    color: #81a2be !important;
    text-decoration: none !important;
  }
  a:hover, a:hover * {
    color: #f0c674 !important;
  }
  a:visited, a:visited * {
    color: #b294bb !important;
  }
  a:visited:hover, a:visited:hover * {
    color: #de935f !important;
  }
EOM
styledisable -name=tomorrownight

"}}}
" Style: Minimalistic Tabs {{{
" -----------------------------------------------------------------------------

style -name minitabs chrome://* <<EOM
#TabsToolbar toolbarbutton {
  display: none !important;
}
.tabbrowser-tabs {
  background: #1b1b1b !important;
}
.tabbrowser-tab {
  -moz-appearance: none !important;
  -moz-border-radius: 0 !important;
  background: #1b1b1b !important;
  border: none !important;
  color: #969896 !important;
  font-family: Cousine !important;
  font-size: 8pt !important;
  height: 18px !important;
  margin: 0 !important;
  min-height: 0 !important;
  padding: 0 0.5ex !important;
}
.tabbrowser-tab:not([pinned]) {
  max-width: 60px !important;
  min-width: 160px !important;
}
.tabbrowser-tab:not([fadein]) {
  max-width: 1px !important;
  min-width: 1px !important;
}
.tabbrowser-tab[selected] {
  background: #1b1b1b !important;
  color: #f0c674 !important;
}
EOM
" vim:ft=vimperator
