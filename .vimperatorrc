"
" ~/.vimperatorrc
"

" Options
"
set hlsearch
set noscrollbars
set tabnumbers
set complete-=f

" Status Line
"
"hi -a StatusLine font-family: Cousine !important; font-size: 8pt !important;
hi -a StatusLine font-weight:normal; padding-right: 5px !important;
hi -a StatusLineNormal color:#969896 !important; background:#282a2e !important;
hi -a StatusLineSecure color:#81a2be !important; background:#282a2e !important;
hi -a StatusLineExtended color:#a0ffa0 !important; background:#282a2e !important;
hi -a WarningMsg color:#cc6666 !important; background:#282a2e !important;
hi -a ErrorMsg color:#a54242 !important; background:#282a2e !important;

" Custom colours
"
hi -a Normal color:#969896 !important; background:#1b1b1b !important;

hi -a CompDesc color: #cc9393 !important; width: 55% !important;
hi -a CompGroup color: inherit; font-weight: bold !important;
hi -a CompItem[selected] color:#1b1b1b !important;
hi -a Filter color:#1b1b1b !important;
hi -a InfoMsg color:#f0c674 !important; background:transparent !important;
hi -a MoreMsg color:#b5bd68 !important; background:transparent !important;
hi -a WarningMsg color:#cc6666 !important; background:transparent !important;

" Custom Font
"
hi -a CmdLine color: inherit; background: inherit;
hi -a CmdLine>* font-family: Cousine !important; font-size: 8pt !important;
hi -a Normal font-family: Cousine !important; font-size: 8pt !important;


hi -a CompIcon display: none;
hi -a CompMsg font-family: Cousine !important; font-size: 8pt !important;
hi -a ErrorMsg font-family: Cousine !important; font-size: 8pt !important;
hi -a InfoMsg font-family: Cousine !important; font-size: 8pt !important;
hi -a ModeMsg font-family: Cousine !important; font-size: 8pt !important;
hi -a MoreMsg font-family: Cousine !important; font-size: 8pt !important;
hi -a WarningMsg font-family: Cousine !important; font-size: 8pt !important;
hi ContentSeparator display: none !important;

" Mappings
"
let mapleader = ","
cnoremap <C-n> <Down>
cnoremap <C-p> <Up>
nnoremap <Leader>, :nohlsearch<CR>
nnoremap <Leader>p :set private!<CR>
nnoremap : ;
nnoremap ; :
vnoremap : ;
vnoremap ; :
map s ;open google 
map S ;tabopen google 

" hybrid colourscheme
noremap <F3> :styletoggle<Space>-name<Space>tomorrownight<CR>
style -name tomorrownight http://*,https://*,file://*,about:blank <<EOM
* {
    color: #969896 !important;
    background: #1d1f21 !important;
    border-color: #282a2e !important;
  }
  a, a * {
    color: #81a2be !important;
    text-decoration: none !important;
  }
  a:hover, a:hover * {
    color: #f0c674 !important;
  }
  a:visited, a:visited * {
    color: #b294bb !important;
  }
  a:visited:hover, a:visited:hover * {
    color: #de935f !important;
  }
EOM
styledisable -name=tomorrownight

" tabs
style -name minitabs chrome://* <<EOM
#TabsToolbar toolbarbutton {
  display: none !important;
}
.tabbrowser-tabs {
  background: #1b1b1b !important;
}
.tabbrowser-tab {
  -moz-appearance: none !important;
  -moz-border-radius: 0 !important;
  background: #1b1b1b !important;
  border: none !important;
  color: #969896 !important;
  font-family: Cousine !important;
  font-size: 8pt !important;
  height: 18px !important;
  margin: 0 !important;
  min-height: 0 !important;
  padding: 0 0.5ex !important;
}
.tabbrowser-tab:not([pinned]) {
  max-width: 60px !important;
  min-width: 160px !important;
}
.tabbrowser-tab:not([fadein]) {
  max-width: 1px !important;
  min-width: 1px !important;
}
.tabbrowser-tab[selected] {
  background: #1b1b1b !important;
  color: #f0c674 !important;
}
EOM
" vim:ft=vimperator
