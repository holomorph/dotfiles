" ~/.vimperatorrc

set complete-=f
set focuscontent=true
set incsearch
set noscrollbars
set runtimepath=~/.config/vimperator
set showstatuslinks=0
set smartcase

hi -a Normal font-size: 11pt !important;

colorscheme hints
colorscheme zenburn

" mappings
runtime mappings.vim
nnoremap <leader>d :downloads<cr>
nnoremap <leader>m :messages<cr>
nnoremap <leader>p :winopen -private<cr>
map s :open google<space>
map S :tabopen google<space>
nmap <C-S-n> :tabmove! +1<cr>
nmap <C-S-p> :tabmove! -1<cr>
nmap <F3> <nop>
noremap h 7h
noremap j 7j
noremap k 7k
noremap l 7l

" launch videos
nmap x ;l
nmap <A-x> :launchv<cr>
