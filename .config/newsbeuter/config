# ~/.config/newsbeuter/config

browser "firefox %u &> /dev/null &"
html-renderer "elinks -dump"

auto-reload yes
reload-time 30
reload-threads 3

bind-key j down
bind-key k up
bind-key ^D pagedown
bind-key ^U pageup

color listfocus color11 color8
color info green black bold

highlight article "^Feed:.*" cyan default bold
highlight article "^Title:.*" yellow default bold
highlight article "^Author:.*" cyan default
highlight article "^Link:.*" cyan default
highlight article "^Date:.*" cyan default
