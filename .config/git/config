# ~/.config/git/config

[core]
  editor = vim
  excludesfile = ~/.config/git/ignore
[alias]
  a = add --all
  d = difftool
  s = status -sb
  l = log --decorate --graph --oneline --all
[log]
  decorate = short
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
  verbosity = 1
  summary = true
[color]
  ui = always
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = green bold
  local = blue
  remote = red reverse
[color "diff"]
  func = cyan bold
  old = red bold
  new = green bold
  whitespace = magenta bold
[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold

# vim: ft=gitconfig
