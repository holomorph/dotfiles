# rtorrent/config

max_peers = 100
max_peers_seed = 50
max_uploads = 15

download_rate = 1024
upload_rate = 64

directory = ~/downloads
session = ~/.cache/rtorrent/session

schedule = watch_directory,5,5,load_start=~/.cache/rtorrent/watch/*.torrent
schedule = untied_directory,5,5,stop_untied=
schedule = low_diskspace,5,60,close_low_diskspace=1G

encryption = require
dht = disable
http_capath = /etc/ssl/certs

