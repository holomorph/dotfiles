# ~/.mutt/gmail.muttrc

color status brightgreen black

set realname  = $my_realname
set from      = $my_gmail
set folder    = "~/.mutt/mail/"
set sendmail  = "/usr/bin/msmtp -a gmail"
set spoolfile = "+inbox"
set mbox      = "+archive"
set postponed = "+drafts"

unset record # gmail saves sent mail in +sent anyways

mailboxes +inbox +archive +amazon +cycling +drafts \
          +sent +spam +thesis +trash

# vim:ft=muttrc
