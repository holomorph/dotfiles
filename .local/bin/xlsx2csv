#!/usr/bin/python3

# xlsx2csv: uses the xlrd module to print Excel documents to stdout as comma
# separated values.

import os.path
import sys
import xlrd

if len(sys.argv) != 2:
    print('Usage: %s <file>' % os.path.basename(sys.argv[0]), file=sys.stderr)
    sys.exit(1)

wb = xlrd.open_workbook(sys.argv[1], on_demand=True, logfile=sys.stdout)
for sh in wb.sheets():
    data = [sh.row_values(r) for r in range(sh.nrows)]
    if data:
        name = sh.name
        sys.stdout.write(":%s:\n" % name)
        for row in data:
            for col in row:
                sys.stdout.write("\"%s\"," % col)
            sys.stdout.write("\n")
        wb.unload_sheet(name)
