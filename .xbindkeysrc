# ~/.xbindkeysrc

# mpd control
# "ncmpcpp prev"
#     m:0x8 + c:34
#     Alt + bracketleft
# "ncmpcpp next"
#     m:0x8 + c:35
#     Alt + bracketright
# "ncmpcpp toggle"
#     m:0x8 + c:51
